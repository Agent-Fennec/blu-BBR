  </ItemGroup>

  <ItemGroup>
    <None Remove="modules\ChatLogger.cs.disable" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="BBRAPIModules" Version="0.4.9" />
    <PackageReference Include="Discord.Net" Version="3.12.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>

</Project>
